#!/bin/bash

: ${DOWNLOAD_LOGFILE:=/tmp/plugn_download.log}
: ${DEBUG:=1}

main(){
  read url dest
  debug "url=$url dest=$dest"
  curl -Lko $dest $url || debug "Couldn't download target from URL to destination"
}

debug(){
  [[ "$DEBUG" ]] && echo "[DEBUG] $*" >> $DOWNLOAD_LOGFILE
}

[[ "$0" == "$BASH_SOURCE" ]] && main "$@"